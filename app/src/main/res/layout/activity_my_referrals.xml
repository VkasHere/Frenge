<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/bluee"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".dashboard.my_referrals">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/round2"
        android:layout_height="130dp">
        <TextView
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="Frenge"
            android:gravity="center"
            android:textSize="85sp"
            android:fontFamily="@font/honey"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/refer"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/Pname"
            android:layout_width="70dp"
            android:layout_margin="15dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:gravity="center"
            android:textColor="@color/blue800"
            android:fontFamily="@font/open_sans"
            android:text="Quiz"
            />

        <TextView
            android:id="@+id/scr"
            android:layout_width="190dp"
            android:layout_margin="15dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:gravity="center"
            android:fontFamily="@font/open_sans"
            android:text="Referral IDs"
            android:textColor="@color/blue800"
            />
        <TextView
            android:id="@+id/grad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:textSize="20sp"
            android:gravity="center"
            android:textColor="@color/blue800"
            android:fontFamily="@font/open_sans"
            android:text="Copy"
            />

    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
    android:layout_width="match_parent"
    android:id="@+id/recyclerv"
    android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/clear"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:fontFamily="@font/open_sans"
        android:textSize="22sp"
        android:layout_margin="15dp"
        android:textColor="@color/white"
        android:gravity="center"
        android:text="Clear all data"
        android:background="@drawable/btn_ripple"
        />
    <TextView
        android:id="@+id/noref"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fontFamily="@font/open_sans"
        android:textSize="16sp"
        android:gravity="center_horizontal"
        android:visibility="gone"
        android:padding="12dp"
        android:text="You don't have any referral ID now"/>
</LinearLayout>